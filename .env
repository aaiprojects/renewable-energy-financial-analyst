# =============================================================================
# RENEWABLE ENERGY FINANCIAL ANALYST - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this to .env and fill in your actual API keys and configuration values

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# OpenAI API Key (required for CrewAI agents and LangChain tools)
OPENAI_API_KEY=your_openai_api_key_here

# NewsAPI Key (for fetching news headlines)
# Get from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Alpha Vantage API Key (for financial data, if used)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_KEY=your_alphavantage_key_here

# FRED API Key (Federal Reserve Economic Data)
# Get from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# =============================================================================
# SEC EDGAR API CONFIGURATION
# =============================================================================

# SEC User Agent (required for SEC EDGAR API requests)
# Format: "Your Name your-email@example.com"
SEC_USER_AGENT="Your Name your-email@example.com"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default lookback period in days for data fetching
DEFAULT_LOOKBACK_DAYS=30

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enforce renewable energy filter (true/false)
ENFORCE_RENEWABLES=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment mode (development, staging, production)
ENV_MODE=development

# Debug mode (true/false)
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION (if applicable)
# =============================================================================

# Database URL (if using a database for persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/renewable_db

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit server configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================

# Cache timeout in seconds
CACHE_TIMEOUT=3600

# Maximum number of concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# LANGCHAIN/CREWAI SPECIFIC
# =============================================================================

# LangChain settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here

# CrewAI settings
CREWAI_TELEMETRY_OPT_OUT=true

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for application security (generate a random string)
SECRET_KEY=your_secret_key_here

# JWT secret (if using authentication)
JWT_SECRET=your_jwt_secret_here
